<% content_for :title, "Contact Us - AI Lead Gen" %>

<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-indigo-600 to-purple-700 text-white py-16">
  <div class="absolute inset-0 bg-black opacity-20"></div>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center" data-controller="fade-in">
      <h1 class="text-4xl md:text-5xl font-bold mb-4" data-fade-in-target="element">
        Get in Touch
      </h1>
      <p class="text-xl text-indigo-100" data-fade-in-target="element" data-fade-in-delay="100">
        We're here to help you accelerate your business growth. Reach out to our team today.
      </p>
    </div>
  </div>
</section>

<!-- Contact Section -->
<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      
      <!-- Flash Messages -->
      <% if notice %>
        <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-center" data-controller="fade-in" data-fade-in-target="element">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <%= notice %>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center" data-controller="fade-in" data-fade-in-target="element">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
          <%= alert %>
        </div>
      <% end %>
      
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Contact Information -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg shadow-md p-8" data-controller="scroll-reveal" data-scroll-reveal-target="element">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h2>
            
            <!-- Email -->
            <div class="mb-6">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="w-6 h-6 text-indigo-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Email</p>
                  <a href="mailto:<%= @contact_info[:email] %>" class="text-indigo-600 hover:text-indigo-700 transition-colors duration-300">
                    <%= @contact_info[:email] %>
                  </a>
                </div>
              </div>
            </div>
            
            <!-- Phone -->
            <div class="mb-6">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="w-6 h-6 text-indigo-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Phone</p>
                  <a href="tel:<%= @contact_info[:phone].gsub(/\D/, '') %>" class="text-indigo-600 hover:text-indigo-700 transition-colors duration-300">
                    <%= @contact_info[:phone] %>
                  </a>
                </div>
              </div>
            </div>
            
            <!-- Address -->
            <div class="mb-6">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="w-6 h-6 text-indigo-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Address</p>
                  <p class="text-gray-600">
                    <%= @contact_info[:address].html_safe %>
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Business Hours -->
            <div class="mb-6">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="w-6 h-6 text-indigo-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Business Hours</p>
                  <p class="text-gray-600">
                    <%= @contact_info[:hours] %>
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Social Links -->
            <div class="pt-6 border-t border-gray-200">
              <p class="text-sm font-medium text-gray-900 mb-4">Connect with us</p>
              <div class="flex space-x-4">
                <a href="#" class="text-gray-400 hover:text-indigo-600 transition-colors duration-300">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                  </svg>
                </a>
                <a href="#" class="text-gray-400 hover:text-indigo-600 transition-colors duration-300">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>
                  </svg>
                </a>
                <a href="#" class="text-gray-400 hover:text-indigo-600 transition-colors duration-300">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg shadow-md p-8" data-controller="scroll-reveal contact-form" data-scroll-reveal-target="element" data-scroll-reveal-delay="200">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Send us a Message</h2>
            
            <%= form_with model: @contact_form || ContactForm.new, url: submit_contact_path, local: true, data: { contact_form_target: "form" } do |f| %>
              
              <!-- Error Messages -->
              <% if @contact_form && @contact_form.errors.any? %>
                <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
                  <h3 class="font-medium mb-2">Please correct the following errors:</h3>
                  <ul class="list-disc list-inside text-sm">
                    <% @contact_form.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              
              <div class="grid md:grid-cols-2 gap-6">
                <!-- Name -->
                <div>
                  <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.text_field :name, 
                      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-300", 
                      placeholder: "John Doe",
                      required: true,
                      "aria-label": "Your name",
                      data: { contact_form_target: "nameInput" } %>
                  <span class="hidden text-red-500 text-sm mt-1" data-contact-form-target="nameError"></span>
                </div>
                
                <!-- Email -->
                <div>
                  <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.email_field :email, 
                      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-300", 
                      placeholder: "john@example.com",
                      required: true,
                      "aria-label": "Your email address",
                      data: { contact_form_target: "emailInput" } %>
                  <span class="hidden text-red-500 text-sm mt-1" data-contact-form-target="emailError"></span>
                </div>
                
                <!-- Phone -->
                <div>
                  <%= f.label :phone, "Phone (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.telephone_field :phone, 
                      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-300", 
                      placeholder: "+1 (555) 123-4567",
                      "aria-label": "Your phone number",
                      data: { contact_form_target: "phoneInput" } %>
                  <span class="hidden text-red-500 text-sm mt-1" data-contact-form-target="phoneError"></span>
                </div>
                
                <!-- Company -->
                <div>
                  <%= f.label :company, "Company (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.text_field :company, 
                      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-300", 
                      placeholder: "Acme Corp",
                      "aria-label": "Your company name",
                      data: { contact_form_target: "companyInput" } %>
                </div>
              </div>
              
              <!-- Inquiry Type -->
              <div class="mt-6">
                <%= f.label :inquiry_type, "What can we help you with?", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.select :inquiry_type, 
                    options_for_select(@inquiry_types), 
                    { prompt: "Select an inquiry type" },
                    class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-300",
                    required: true,
                    "aria-label": "Inquiry type",
                    data: { contact_form_target: "inquiryInput" } %>
                <span class="hidden text-red-500 text-sm mt-1" data-contact-form-target="inquiryError"></span>
              </div>
              
              <!-- Message -->
              <div class="mt-6">
                <%= f.label :message, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_area :message, 
                    rows: 5,
                    class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-300", 
                    placeholder: "Tell us how we can help you...",
                    required: true,
                    "aria-label": "Your message",
                    data: { contact_form_target: "messageInput" } %>
                <span class="hidden text-red-500 text-sm mt-1" data-contact-form-target="messageError"></span>
                <p class="text-sm text-gray-500 mt-1">
                  <span data-contact-form-target="charCount">0</span> / 1000 characters
                </p>
              </div>
              
              <!-- Privacy Notice -->
              <div class="mt-6 bg-gray-50 p-4 rounded-lg">
                <p class="text-sm text-gray-600">
                  <svg class="inline w-4 h-4 text-indigo-600 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                  </svg>
                  By submitting this form, you agree to our 
                  <%= link_to "Privacy Policy", "#", class: "text-indigo-600 hover:text-indigo-700 underline" %> 
                  and 
                  <%= link_to "Terms of Service", "#", class: "text-indigo-600 hover:text-indigo-700 underline" %>.
                </p>
              </div>
              
              <!-- Submit Button -->
              <div class="mt-6">
                <%= f.submit "Send Message", 
                    class: "w-full md:w-auto px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-300 cursor-pointer",
                    data: { 
                      contact_form_target: "submitButton",
                      action: "click->contact-form#validateAndSubmit"
                    } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Map Section -->
      <div class="mt-12">
        <div class="bg-white rounded-lg shadow-md overflow-hidden" data-controller="scroll-reveal" data-scroll-reveal-target="element">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.019720565384!2d-122.41941508468198!3d37.77492997975903!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085809c6c8f4459%3A0xb10ed6d9b5050fa5!2sTwitter%20HQ!5e0!3m2!1sen!2sus!4v1234567890"
            width="100%" 
            height="400" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Office Location"
            class="w-full">
          </iframe>
        </div>
      </div>
      
    </div>
  </div>
</section>

<!-- FAQ Section -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-12" data-controller="scroll-reveal" data-scroll-reveal-target="element">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Frequently Asked Questions</h2>
        <p class="text-xl text-gray-600">
          Quick answers to common questions about our services.
        </p>
      </div>
      
      <div class="space-y-4" data-controller="accordion">
        <!-- FAQ Item 1 -->
        <div class="bg-gray-50 rounded-lg" data-accordion-target="item" data-controller="scroll-reveal" data-scroll-reveal-target="element" data-scroll-reveal-delay="100">
          <button class="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-100 transition duration-300 rounded-lg" data-action="click->accordion#toggle">
            <span class="font-medium text-gray-900">What is your typical response time?</span>
            <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-300" data-accordion-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="hidden px-6 pb-4" data-accordion-target="content">
            <p class="text-gray-600">
              We typically respond to all inquiries within 24 hours during business days. For urgent support issues, our premium customers receive priority response within 2 hours.
            </p>
          </div>
        </div>
        
        <!-- FAQ Item 2 -->
        <div class="bg-gray-50 rounded-lg" data-accordion-target="item" data-controller="scroll-reveal" data-scroll-reveal-target="element" data-scroll-reveal-delay="200">
          <button class="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-100 transition duration-300 rounded-lg" data-action="click->accordion#toggle">
            <span class="font-medium text-gray-900">Do you offer phone support?</span>
            <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-300" data-accordion-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="hidden px-6 pb-4" data-accordion-target="content">
            <p class="text-gray-600">
              Yes, phone support is available for our Business and Enterprise plans. You can reach us at our support line during business hours, Monday through Friday, 9 AM to 6 PM PST.
            </p>
          </div>
        </div>
        
        <!-- FAQ Item 3 -->
        <div class="bg-gray-50 rounded-lg" data-accordion-target="item" data-controller="scroll-reveal" data-scroll-reveal-target="element" data-scroll-reveal-delay="300">
          <button class="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-100 transition duration-300 rounded-lg" data-action="click->accordion#toggle">
            <span class="font-medium text-gray-900">How can I schedule a demo?</span>
            <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-300" data-accordion-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="hidden px-6 pb-4" data-accordion-target="content">
            <p class="text-gray-600">
              Simply fill out the contact form above and select "Sales & Pricing" as your inquiry type. Our sales team will reach out within 24 hours to schedule a personalized demo at your convenience.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>