<% content_for :title, "#{@lead.full_name_or_email} - Lead Details" %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-indigo-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Breadcrumb -->
        <nav class="flex items-center space-x-4" aria-label="Breadcrumb">
          <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
              <%= link_to leads_path, class: "inline-flex items-center text-gray-500 hover:text-indigo-600 transition-colors duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Leads
              <% end %>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="ml-1 text-gray-900 font-medium md:ml-2"><%= @lead.full_name_or_email %></span>
              </div>
            </li>
          </ol>
        </nav>

        <!-- Actions -->
        <div class="flex items-center space-x-3">
          <%= link_to edit_lead_path(@lead), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Lead
          <% end %>
          
          <% unless @lead.converted? %>
            <%= link_to convert_lead_path(@lead), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 shadow-sm hover:shadow-md", data: { confirm: "Mark this lead as converted?" } do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
              Convert Lead
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Lead Overview -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-purple-50">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <div class="h-16 w-16 rounded-full bg-gradient-to-r from-<%= @lead.temperature_color %>-400 to-<%= @lead.temperature_color %>-600 flex items-center justify-center">
                  <span class="text-xl font-bold text-white">
                    <%= @lead.full_name_or_email.first.upcase %>
                  </span>
                </div>
              </div>
              <div class="flex-1">
                <h1 class="text-2xl font-bold text-gray-900"><%= @lead.full_name_or_email %></h1>
                <p class="text-lg text-gray-600"><%= @lead.position.presence || "Unknown Position" %> at <%= @lead.display_company %></p>
                <div class="mt-2 flex items-center space-x-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= @lead.status_color %>-100 text-<%= @lead.status_color %>-800">
                    <%= @lead.status.humanize %>
                  </span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= @lead.priority_color %>-100 text-<%= @lead.priority_color %>-800">
                    <%= @lead.priority.humanize %> Priority
                  </span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= @lead.temperature_color %>-100 text-<%= @lead.temperature_color %>-800">
                    <%= @lead.temperature.humanize %> Lead
                  </span>
                </div>
              </div>
              <div class="text-right">
                <div class="text-3xl font-bold text-indigo-600"><%= @lead.qualification_score %></div>
                <div class="text-sm text-gray-500">Qualification Score</div>
                <div class="mt-2 w-24 bg-gray-200 rounded-full h-2">
                  <div class="bg-gradient-to-r from-indigo-400 to-purple-500 h-2 rounded-full" style="width: <%= @lead.qualification_score %>%"></div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Contact Information -->
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h3>
                <dl class="space-y-3">
                  <% if @lead.email.present? %>
                    <div>
                      <dt class="text-sm font-medium text-gray-500">Email</dt>
                      <dd class="text-sm text-gray-900">
                        <%= link_to @lead.email, "mailto:#{@lead.email}", class: "text-indigo-600 hover:text-indigo-800" %>
                      </dd>
                    </div>
                  <% end %>
                  
                  <% if @lead.phone.present? %>
                    <div>
                      <dt class="text-sm font-medium text-gray-500">Phone</dt>
                      <dd class="text-sm text-gray-900">
                        <%= link_to @lead.phone, "tel:#{@lead.phone}", class: "text-indigo-600 hover:text-indigo-800" %>
                      </dd>
                    </div>
                  <% end %>
                  
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Company</dt>
                    <dd class="text-sm text-gray-900"><%= @lead.display_company %></dd>
                  </div>
                  
                  <% if @lead.position.present? %>
                    <div>
                      <dt class="text-sm font-medium text-gray-500">Position</dt>
                      <dd class="text-sm text-gray-900"><%= @lead.position %></dd>
                    </div>
                  <% end %>
                </dl>
              </div>
              
              <!-- Lead Details -->
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Lead Details</h3>
                <dl class="space-y-3">
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Source</dt>
                    <dd class="text-sm text-gray-900">
                      <% if @lead.source_platform.present? %>
                        <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-800">
                          <%= @lead.source_platform.humanize %>
                        </span>
                      <% else %>
                        Unknown
                      <% end %>
                    </dd>
                  </div>
                  
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Lead Stage</dt>
                    <dd class="text-sm text-gray-900"><%= @lead.lead_stage.humanize %></dd>
                  </div>
                  
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Created</dt>
                    <dd class="text-sm text-gray-900">
                      <%= @lead.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                      <span class="text-gray-500">(<%= time_ago_in_words(@lead.created_at) %> ago)</span>
                    </dd>
                  </div>
                  
                  <% if @lead.last_contacted_at.present? %>
                    <div>
                      <dt class="text-sm font-medium text-gray-500">Last Contact</dt>
                      <dd class="text-sm text-gray-900">
                        <%= @lead.last_contacted_at.strftime("%B %d, %Y at %I:%M %p") %>
                        <span class="text-gray-500">(<%= time_ago_in_words(@lead.last_contacted_at) %> ago)</span>
                      </dd>
                    </div>
                  <% end %>
                  
                  <% if @lead.next_follow_up.present? %>
                    <div>
                      <dt class="text-sm font-medium text-gray-500">Next Follow-up</dt>
                      <dd class="text-sm text-gray-900">
                        <%= @lead.next_follow_up.strftime("%B %d, %Y at %I:%M %p") %>
                        <% if @lead.overdue_follow_up? %>
                          <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-red-100 text-red-800 ml-2">
                            Overdue
                          </span>
                        <% elsif @lead.needs_follow_up? %>
                          <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-yellow-100 text-yellow-800 ml-2">
                            Due Soon
                          </span>
                        <% end %>
                      </dd>
                    </div>
                  <% end %>
                </dl>
              </div>
            </div>
            
            <!-- Notes -->
            <% if @lead.notes.present? %>
              <div class="mt-6 pt-6 border-t border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Notes</h3>
                <div class="bg-gray-50 rounded-lg p-4">
                  <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= @lead.notes %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Source Mention -->
        <% if @lead.mention.present? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900">Source Mention</h3>
            </div>
            <div class="p-6">
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm text-gray-700"><%= @lead.mention.content %></p>
                    <div class="mt-2 flex items-center space-x-4 text-xs text-gray-500">
                      <span>Platform: <%= @lead.mention.platform.humanize %></span>
                      <span>•</span>
                      <span>Posted: <%= time_ago_in_words(@lead.mention.created_at) %> ago</span>
                      <% if @lead.mention.engagement_score.present? %>
                        <span>•</span>
                        <span>Engagement: <%= @lead.mention.engagement_score %></span>
                      <% end %>
                    </div>
                    <% if @lead.mention.url.present? %>
                      <div class="mt-2">
                        <%= link_to "View Original Post", @lead.mention.url, target: "_blank", class: "text-indigo-600 hover:text-indigo-800 text-xs font-medium" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Quick Actions</h3>
          </div>
          <div class="p-6 space-y-3">
            <% unless @lead.contacted? %>
              <%= link_to contact_lead_path(@lead), method: :post, class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                Mark as Contacted
              <% end %>
            <% end %>
            
            <% unless @lead.qualified? %>
              <%= link_to qualify_lead_path(@lead), method: :post, class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Qualify Lead
              <% end %>
            <% end %>
            
            <% if @lead.email.present? %>
              <%= link_to "mailto:#{@lead.email}", class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                Send Email
              <% end %>
            <% end %>
            
            <% if @lead.phone.present? %>
              <%= link_to "tel:#{@lead.phone}", class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                Call Lead
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Lead Progress -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Lead Progress</h3>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div>
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-gray-700">Stage Progress</span>
                  <span class="text-sm text-gray-500"><%= @lead.stage_progress_percentage %>%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-gradient-to-r from-indigo-400 to-purple-500 h-2 rounded-full transition-all duration-500" style="width: <%= @lead.stage_progress_percentage %>%"></div>
                </div>
                <p class="text-xs text-gray-500 mt-1">Current: <%= @lead.lead_stage.humanize %></p>
              </div>
              
              <div class="pt-4 border-t border-gray-200">
                <h4 class="text-sm font-medium text-gray-900 mb-3">Key Metrics</h4>
                <dl class="space-y-2">
                  <div class="flex justify-between">
                    <dt class="text-xs text-gray-500">Days since created</dt>
                    <dd class="text-xs font-medium text-gray-900"><%= @lead.days_since_created %></dd>
                  </div>
                  <% if @lead.days_since_last_contact.present? %>
                    <div class="flex justify-between">
                      <dt class="text-xs text-gray-500">Days since last contact</dt>
                      <dd class="text-xs font-medium text-gray-900"><%= @lead.days_since_last_contact %></dd>
                    </div>
                  <% end %>
                  <div class="flex justify-between">
                    <dt class="text-xs text-gray-500">Interactions</dt>
                    <dd class="text-xs font-medium text-gray-900"><%= @lead.interaction_count %></dd>
                  </div>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <!-- Related Leads -->
        <% if @related_leads.any? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900">Related Leads</h3>
            </div>
            <div class="divide-y divide-gray-200">
              <% @related_leads.each do |related_lead| %>
                <div class="p-4 hover:bg-gray-50 transition-colors duration-200">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                      <div class="h-8 w-8 rounded-full bg-gradient-to-r from-gray-400 to-gray-600 flex items-center justify-center">
                        <span class="text-xs font-medium text-white">
                          <%= related_lead.full_name_or_email.first.upcase %>
                        </span>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        <%= link_to related_lead.full_name_or_email, lead_path(related_lead), class: "hover:text-indigo-600" %>
                      </p>
                      <p class="text-xs text-gray-500"><%= related_lead.status.humanize %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
