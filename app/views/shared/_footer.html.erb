<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Main footer content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="flex items-center space-x-3">
          <svg class="h-8 w-8 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <span class="text-xl font-bold text-white">AI Lead Gen</span>
        </div>
        <p class="text-sm text-gray-400">
          Harness the power of AI to discover and qualify leads from across the web. Transform conversations into opportunities.
        </p>
        <div class="flex space-x-4">
          <!-- Social Media Links -->
          <a href="#" class="text-gray-400 hover:text-white transition duration-150 ease-in-out" aria-label="Twitter">
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition duration-150 ease-in-out" aria-label="LinkedIn">
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition duration-150 ease-in-out" aria-label="GitHub">
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Product -->
      <div>
        <h3 class="text-white font-semibold mb-4">Product</h3>
        <ul class="space-y-2">
          <li><%= link_to "Features", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Pricing", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "API Documentation", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Integrations", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Changelog", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-white font-semibold mb-4">Resources</h3>
        <ul class="space-y-2">
          <li><%= link_to "Blog", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Help Center", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Community", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Case Studies", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Webinars", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-white font-semibold mb-4">Company</h3>
        <ul class="space-y-2">
          <li><%= link_to "About Us", about_path, class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Careers", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Contact", contact_path, class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Partners", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
          <li><%= link_to "Press", "#", class: "text-sm hover:text-white transition duration-150 ease-in-out" %></li>
        </ul>
      </div>
    </div>

    <!-- Newsletter Subscription -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <div class="md:flex md:items-center md:justify-between">
        <div class="flex-1 max-w-md">
          <h3 class="text-white font-semibold mb-2">Subscribe to our newsletter</h3>
          <p class="text-sm text-gray-400 mb-4">Get the latest updates and insights delivered to your inbox.</p>
          <form class="flex space-x-2">
            <input 
              type="email" 
              placeholder="Enter your email" 
              class="flex-1 px-4 py-2 bg-gray-800 text-white rounded-lg border border-gray-700 focus:outline-none focus:border-indigo-500 transition duration-150 ease-in-out"
              required>
            <button 
              type="submit" 
              class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-indigo-500 transition duration-150 ease-in-out">
              Subscribe
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bottom footer -->
    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="md:flex md:items-center md:justify-between">
        <div class="flex space-x-6 md:order-2">
          <%= link_to "Privacy Policy", "#", class: "text-sm text-gray-400 hover:text-white transition duration-150 ease-in-out" %>
          <%= link_to "Terms of Service", "#", class: "text-sm text-gray-400 hover:text-white transition duration-150 ease-in-out" %>
          <%= link_to "Cookie Policy", "#", class: "text-sm text-gray-400 hover:text-white transition duration-150 ease-in-out" %>
          <%= link_to "Sitemap", "#", class: "text-sm text-gray-400 hover:text-white transition duration-150 ease-in-out" %>
        </div>
        <p class="mt-4 text-sm text-gray-400 md:mt-0 md:order-1">
          &copy; <%= Date.current.year %> AI Lead Gen. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>